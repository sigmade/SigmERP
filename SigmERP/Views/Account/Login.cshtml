@model SigmERP.Models.LoginModel

@{
    Layout = null;
}

@*<a asp-action="Register" asp-controller="Account">Регистрация</a>*@
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/site.css" />
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<div class="container">
    <div class="row">
        <div class="col-sm">
        </div>
        <div class="col-sm">
            <div class="row mt-3">
                <div class="col">
                </div>
                <div class="col-6 ">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Войти в систему</button>
                </div>
                <div class="col">
                </div>
            </div>
            <div class="alert alert-danger row m-3" role="alert" asp-validation-summary="ModelOnly"></div>
        </div>
        <div class="col-sm">
        </div>
    </div>
</div>





<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Авторизация</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                    <div class="form-group">
                        <label asp-for="Email">Введите Email</label>
                        <input type="text" asp-for="Email" class="form-control" aria-describedby="emailHelp">
                        <span asp-validation-for="Email" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Введите пароль</label>
                        <input asp-for="Password" class="form-control" id="exampleInputPassword1">
                        <span asp-validation-for="Password" />
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Войти</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>