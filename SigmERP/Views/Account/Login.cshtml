@model SigmERP.Models.LoginModel

<h2>Вход на сайт</h2>

@*<a asp-action="Register" asp-controller="Account">Регистрация</a>*@

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <div><label asp-for="Email">Введите Email</label></div>
            <div><input type="text" asp-for="Email" /></div>
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <div><label asp-for="Password">Введите пароль</label></div>
            <div><input asp-for="Password" /></div>
                     <span asp-validation-for="Password" />
                 </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Войти</button>
            @*<input type="submit" value="Войти" class="btn" />*@
        </div>
    </div>
</form>
